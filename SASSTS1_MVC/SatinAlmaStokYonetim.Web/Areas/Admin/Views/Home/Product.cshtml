<script>
    //product.js
    var let_queue = "@_localization.Getkey("Sıra").Value"
    var let_productImage = "@_localization.Getkey("Ürün Resmi").Value"
    var let_productName = "@_localization.Getkey("Ürün Adı").Value"
    var let_unit = "@_localization.Getkey("Birim").Value"
    var let_category = "@_localization.Getkey("Kategori").Value"
    var let_edit = "@_localization.Getkey("Düzenle").Value"
    var let_delete = "@_localization.Getkey("Sil").Value"
    var let_allCategories = "@_localization.Getkey("Tüm Kategoriler").Value"
    var let_piece = "@_localization.Getkey("Adet").Value"
