<div class="card border-light border mt-4 mb-4">
    <h6 class="card-header"><i b-eruwahco1m="" class=" uil-building me-1"></i>@_localization.Getkey("Şirket İşlemleri").Value</h6>
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-sm-4">
                <button class="btn btn-success mb-2" onclick="newCompany()" data-bs-toggle="modal" data-bs-target="#addCompanyModal"><i class="mdi mdi-plus-circle me-2"></i> @_localization.Getkey("Şirket Ekle").Value</button>
            </div>
            <div class="col-sm-8">
            </div>
        </div>
        <div class="app-search mb-2">
            <div class="mb-2 position-relative">
                <input type="text" class="form-control" id="searchText" autocomplete="off" placeholder="@_localization.Getkey("Şirket Adı ile Ara...").Value">
                <span class="mdi mdi-magnify search-icon"></span>
            </div>
        </div>
        <hr />
        <div class="table-responsive mt-4">
