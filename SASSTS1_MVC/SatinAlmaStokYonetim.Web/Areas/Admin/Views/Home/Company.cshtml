<div class="modal fade" id="addCompanyModal" tabindex="-1" role="dialog"
     aria-labelledby="addPCompanyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addCompanyModalLabel">@_localization.Getkey("Şirket Bilgileri").Value</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-hidden="true"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex align-items-center px-2 mb-2 mt-2">
                    <label class="me-2" >@_localization.Getkey("Şirket Adı").Value :</label>
                    <input type="text" id="inputCompanyName" class="form-control" />
                </div>

                <div class="d-flex align-items-center px-2 mb-2 mt-2">
                    <label class="me-2">@_localization.Getkey("Şirket No").Value :</label>
                    <input type="text" class="form-control" id="inputCompanyNo" data-toggle="input-mask" data-mask-format="######" maxlength="6" placeholder="######">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">
                    @_localization.Getkey("Kapat").Value
                </button>

                <button type="button" class="btn btn-sm btn-success" onclick="saveCompany()">
                    @_localization.Getkey("Kaydet").Value
                </button>
            </div>
        </div>
    </div>
</div>

